<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="190dp"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        >


            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerVertical="true"
                android:text="Add Friend"

                android:textColor="@color/black"
                android:textSize="16dp" />
    <TextView
        android:id="@+id/t2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Add a friend to user SOS."
        android:layout_below="@id/t1"
        android:textColor="@color/black"
        android:textSize="12dp" />
    </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addFrBtn"
                android:layout_width="120dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/animation_btn"
                android:layout_centerVertical="true"
                android:text="Add Friend"
                android:textAllCaps="false"
                android:textColor="@color/white" />
</RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="190dp"
                    android:orientation="vertical"
                    android:layout_marginStart="20dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    >


                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="View Friend"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/t4"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="View Friend that you added."
                    android:layout_below="@id/t1"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
                </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/viewfrBtn"
                android:layout_marginEnd="20dp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/animation_btn"
                android:layout_centerVertical="true"
                android:text="View Friend"
                android:textAllCaps="false"
                android:textColor="@color/white" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sos"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
       app:lottie_rawRes="@raw/greensos"
        android:layout_marginTop="70dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        tools:ignore="MissingConstraints"

        />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sos2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:lottie_rawRes="@raw/redsos"
        android:layout_marginTop="70dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        tools:ignore="MissingConstraints"

        />

</RelativeLayout>
</FrameLayout>